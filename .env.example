# ─── Database ────────────────────────────────────────────────────────
# PostgreSQL connection string
# Create at: https://vercel.com/docs/postgres or use any Postgres provider
DATABASE_URL=postgresql://user:password@localhost:5432/chat

# ─── AI ──────────────────────────────────────────────────────────────
# Vercel AI Gateway API key (routes to OpenAI/Anthropic)
# Create at: https://vercel.com/ai-gateway
AI_GATEWAY_API_KEY=your-gateway-key

# ─── App ─────────────────────────────────────────────────────────────
# Public URL of the application (optional)
NEXT_PUBLIC_APP_URL=http://localhost:3000
# ─── Log WebSocket server ─────────────────────────────────────────────
# Optional. Run `pnpm log-ws`; set NEXT_PUBLIC_LOG_WS_URL so the UI streams run logs over WSS.
LOG_WS_PORT=3001
NEXT_PUBLIC_LOG_WS_URL=ws://localhost:3001

# ─── External events enrichment ──────────────────────────────────────
EXTERNAL_EVENTS_MAX_DOMAINS=50
EXTERNAL_EVENTS_SEARCH_PROVIDER=google
EXTERNAL_EVENTS_NEWS_API_KEY=

# Google Custom Search (when EXTERNAL_EVENTS_SEARCH_PROVIDER=google)
EXTERNAL_EVENTS_GOOGLE_CSE_KEY=
EXTERNAL_EVENTS_GOOGLE_CSE_CX=
